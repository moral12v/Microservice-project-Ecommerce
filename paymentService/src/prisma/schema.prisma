
      generator client {
        provider = "prisma-client-js"
      }

      datasource db {
        provider = "postgresql"
        url      = "postgresql://ctb_db_user:Expert@001@localhost:5432/ctb_payment?schema=public"
      }

model orderService {
  id                   Int       @id @default(autoincrement())
  orderId              Int
  sheduleOrderDate     DateTime  @default(now())
  userId               Int
  addressTypeId        Int
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}



model transactionHistory {
  id              Int      @id @default(autoincrement())
  userId          String
 amount          Float     
  currency        String
  type            String
  status          String
  paymentMethod   String
  referenceId     String
  merchantId      String
  description     String
  orderId         String
  paymentOrderId  String
  aggregatorStatus String @default("unpaid")
  paid_amount      Float?    
  paid_date        String? 
  reason           String? 
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Invoice {
  id                   Int       @id @default(autoincrement())
  invoiceNumber        Int
  orderId              Int
  merchantId           Int
  customerId           Int
  orderDetailId        Int
  Date                 DateTime  @default(now())
  userId               Int
  totalPayment         Int
  gst                  Int
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}
