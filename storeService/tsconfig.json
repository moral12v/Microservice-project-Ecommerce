{
   "compilerOptions": {
      "resolveJsonModule": true,
      "target": "ES6",
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "build",
      "rootDir": ".",
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
   },
   "lib": [
      "es2015"
   ],
   "include": [
      "src/**/*",
      "index.ts"
   ],
   "exclude": [
      "node_modules"
   ]
}
